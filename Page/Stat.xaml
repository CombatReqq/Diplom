<Page x:Class="PP.Page.Stat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PP.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stat">

    <Grid>
        <DataGrid x:Name="sessionDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID пользователя" Binding="{Binding id_user}"/>
                <DataGridTextColumn Header="Дата начала сессии" Binding="{Binding start_session, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}"/>
                <DataGridTextColumn Header="Дата окончания сессии" Binding="{Binding end_session, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
