<Page x:Class="PP.Page.Autoris"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PP.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autoris">

    <Page.Background>
        <SolidColorBrush Color="#9dc3fc"/>
    </Page.Background>
    <Viewbox>
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Введите логин "/>
                <TextBox x:Name="Login"/>
                <TextBlock Text="Введите пароль:"/>
                <PasswordBox x:Name="passwordBox" Width="200"/>
                <TextBlock x:Name="errorMessage" Foreground="Red" Visibility="Collapsed"/>
                <Button Content="Войти" Click="Log_BTN" Width="100" Margin="0 10 0 0" Style="{StaticResource mainBtn}"/>
                
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>
